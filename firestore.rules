rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isEditor(storeId) {
      return request.auth != null
        && request.auth.token.roles[storeId] in ["owner", "editor"];
    }

    match /stores/{storeId} {
      allow read: if true; // público pode ler config básica
      allow write: if isEditor(storeId);
    }

    match /categories/{id} {
      allow read: if true;
      allow write: if isEditor(request.resource.data.storeId);
    }

    match /products/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
