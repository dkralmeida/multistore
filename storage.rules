rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Permitir leitura pública para outros arquivos (ex: imagens públicas)
    match /{allPaths=**} {
      allow read: if true;
    }
  }
}
